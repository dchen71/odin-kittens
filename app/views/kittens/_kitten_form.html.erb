<% if @kitten.errors.any? %>
	<ul>
	  <% @kitten.errors.full_messages.each do |msg| %>
	    <li><%= msg %></li>
	  <% end %>
	</ul>
<% end %>

<%= form_for(@kitten) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :age %>
	<%= f.text_field :age %>
	<%= f.label :softness %>
	<%= f.text_field :softness %>
	<%= f.label :cuteness%>
	<%= f.text_field :cuteness%>
	<br>
	<%= f.submit "Submit kitty" %>
<% end %>